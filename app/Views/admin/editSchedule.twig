{% extends "master.twig" %}

{% block head %}

    <!-- Bootstrap -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="css/nprogress.css" rel="stylesheet">
    <!-- iCheck -->
    <link href="css/green.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="css/custom.min.css" rel="stylesheet">
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        .split {
            display: inline-block;
        }


    </style>

    {#<script src="js/jquery.js"></script>#}
    <script src="js/bootstrap.js"></script>



{% endblock head %}

{% block title %} Edit Schedule {% endblock title %}

{% block content %}

    <div class="clearfix"></div>

    <div class="row">
        {#<div class="col-md-12">#}
            <div class="x_panel2">
                <div class="x_title">
                    <h2>Classes</h2>

                    <div class="clearfix"></div>
                </div>
                <div>
                    {#class="x_content"#}
                    <p>Simple table with project listing with progress and editing options</p>

                    <!-- start project list -->
                    <table class="table table-striped projects">
                        <thead>
                        <tr>

                            <th>#</th>
                            <th>Project Name</th>

                            <th>Team Members</th>
                            <th>Project Progress</th>

                        </tr>
                        </thead>
                        <tbody>


                        {% for class in classes %}
                            <tr style="padding: 0;">

                                <td colspan="4" style="border: none; padding: 0;">

                                    <div class="x_panel" style="padding: 0;">

                                        <div class="x_title" style="padding: 4px; border-bottom: none;">

                                            {#<h2>Stripped table <small>Stripped table subtitle</small></h2>#}
                                            <div class="split" style="width: 5%; margin: 0;">
                                                {{ loop.index }}
                                            </div>

                                            <div class="split" style="width: 32%; margin: 0;">
                                                <a>{{ class.name }}</a>
                                                <br />
                                                <small>Instructor Name:
                                                    {% for instructor in allInstructors %}
                                                        {% if class.instructorID == instructor.id %}
                                                            {{ instructor.name }}
                                                        {% endif %}
                                                    {% endfor %}
                                                </small>
                                            </div>

                                            <div class="split" style="width: 25%; margin: 0;">
                                                <ul class="list-inline">
                                                    <li>
                                                        <img src="images/user.png" class="avatar" alt="Avatar">
                                                    </li>
                                                    <li>
                                                        <img src="images/user.png" class="avatar" alt="Avatar">
                                                    </li>
                                                    <li>
                                                        <img src="images/user.png" class="avatar" alt="Avatar">
                                                    </li>
                                                    <li>
                                                        <img src="images/user.png" class="avatar" alt="Avatar">
                                                    </li>
                                                </ul>
                                            </div>

                                            <div class="split" style="width: 25%; margin: 0;">
                                                <div class="project_progress">
                                                    <div class="progress progress_sm">
                                                        <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="{{ class.currentCapacityPercentage }}"></div>
                                                    </div>
                                                    <small>
                                                        {{ class.currentCapacityPercentage }}% Complete
                                                    </small>
                                                </div>
                                            </div>

                                            <ul class="nav navbar-right panel_toolbox">
                                                <li>
                                                    <a class="collapse-link"><i class="fa fa-chevron-down"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                                        <i class="fa fa-wrench"></i>
                                                    </a>
                                                    <ul class="dropdown-menu" role="menu">

                                                        {#<form action="/editclass" method="post" style="margin: 0;">#}
                                                        <li>

                                                            <input type="hidden" id="edit" name="edit" value="{{ class.id }}">
                                                            <a href="#" onclick="jQuery(this).closest('form').submit()" class="edit" value="{{ class.id }}">Edit Class</a>

                                                        </li>
                                                        <li>
                                                            <input type="hidden" name="hold" value="{{ class.id }}">
                                                            <a href="#" onclick="jQuery(this).closest('form').submit()" class="edit" value="{{ class.id }}" >Hold</a>
                                                        </li>

                                                        {#</form>#}
                                                    </ul>
                                                </li>
                                                <li>
                                                    <a class="close-link" onclick="alert('Are you sure you want to delete this class?')">
                                                        <i class="fa fa-close"></i></a>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>

                                        <div class="x_content update" style="padding: 0; display: none;">

                                            <table class="table table-striped">
                                                <thead>
                                                <tr>
                                                    <th>Instructor</th>
                                                    <th>Duration/Min</th>
                                                    <th>Start Time/24:00</th>
                                                    <th>Max. Capacity</th>
                                                    <th>Current Capacity</th>
                                                    <th>Location</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <tr>
                                                    
                                                    <td>
                                                        {% for instructor in allInstructors %}
                                                            {% if class.instructorID == instructor.id %}
                                                                {{ instructor.name }}
                                                            {% endif %}
                                                        {% endfor %}
                                                    </td>
                                                    <td>{{ class.duration }}</td>
                                                    <td>{{ class.startTime }}</td>
                                                    <td>{{ class.capacity }}</td>
                                                    <td>{{ class.currentCapacity }}</td>
                                                    <td>{{ class.location }}</td>
                                                    <td></td>
                                                </tr>
                                                <tr style="display: none;" class="updateInfo">
                                                    <form action="/updateclass" method="post">

                                                        <td>
                                                            {#make sure to add that#}
                                                            {#<input type="" id="endTime" name="instructor" min="08:00" max="21:00" value="{{ class.endTime }}">#}
                                                            <select name="instructor" id="">
                                                                {% for instructor in allInstructors %}
                                                                    {% if instructor.id == class.instructorID %}

                                                                        <option value="{{ instructor.id }}" selected>{{ instructor.name }} </option>
                                                                {% else %}

                                                                    <option value="{{ instructor.id }}">{{ instructor.name }}</option>
                                                                {% endif %}
                                                                {% endfor %}
                                                            </select>
                                                        </td>

                                                        <td>
                                                            <input type="number" id="duration" name="duration" min="1" max="100" value="{{ class.duration }}">
                                                        </td>

                                                        <td>
                                                            <input type="time" id="startTime" name="startTime" min="08:00" max="21:00" value="{{ class.startTime }}">
                                                        </td>

                                                        <td>
                                                            <input type="number" id="capacity" name="capacity" min="1" max="30" value="{{ class.capacity }}">
                                                        </td>

                                                        <td>
                                                            {{ class.currentCapacity }}
                                                        </td>

                                                        <td>
                                                            <input type="text" id="location" name="location" value="{{ class.location }}">
                                                        </td>

                                                        <td>
                                                            <input type="hidden" name="id" value="{{ class.id }}">

                                                            {#remove unnecessary attributes#}
                                                            <button type="submit" value="{{ class.id }}">Update</button>
                                                        </td>

                                                    </form>

                                                </tr>
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </td>
                            </tr>


                        {% endfor %}


                            </tbody>

                        </tbody>
                    </table>
                    <!-- end project list -->


                        <div class="collapse">dsfgdfg</div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script>
        jQuery(document).ready(function() {
            console.log("HIII");

            jQuery('.collapse-link').click(function() {
                toggle(this);

            })  ;


            jQuery('.close-link').click(function () {
                var $BOX_PANEL = jQuery(this).closest('.x_panel');

                $BOX_PANEL.remove();
            });






        });



        jQuery('.edit').click(function() {

            toggleOnce(this);
            jQuery('.updateInfo').toggle();

        });

        function toggle($this) {

            var $BOX_PANEL = jQuery($this).closest('.x_panel'),
                    $ICON = jQuery($this).find('i'),
                    $BOX_CONTENT = $BOX_PANEL.find('.x_content');

            if ($BOX_PANEL.attr('style')) {
                $BOX_CONTENT.slideToggle(200, function(){
                    $BOX_PANEL.removeAttr('style');
                });
            } else {
                $BOX_CONTENT.slideToggle(200);
                $BOX_PANEL.css('height', 'auto');
            }

            $ICON.toggleClass('fa-chevron-down');
            $ICON.toggleClass('fa-chevron-up');

            jQuery('.x_title').css('border-bottom', '2px solid');

        }

        function toggleOnce($this) {

            var $BOX_PANEL = jQuery($this).closest('.x_panel'),
                    $ICON = jQuery($this).find('i'),
                    $BOX_CONTENT = $BOX_PANEL.find('.x_content');

            if ($BOX_PANEL.attr('style')) {
                $BOX_CONTENT.slideToggle(200, function(){
                    $BOX_PANEL.removeAttr('style');
                });
            }

            $ICON.toggleClass('fa-chevron-down');
            $ICON.toggleClass('fa-chevron-up');

        }

        function toggleUpdate($this) {

            var $B = jQuery($this).closest('.x_content').closest('.x_content');
            console.log($B);

        }


    </script>

    <script>
        jQuery('.edit').click(function() {

            var $id = jQuery(this).attr('value');

            jQuery(this).closest('.x_content').css('display','block');
            jQuery(this).closest('.x_content').css('style','');

        });

    </script>





    <script>jQuery.noConflict();</script>
