{% extends "master.twig" %}

{% block head %}

    <!-- Bootstrap -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="css/nprogress.css" rel="stylesheet">
    <!-- iCheck -->
    <link href="css/green.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="css/custom.min.css" rel="stylesheet">
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        .split {
            display: inline-block;
            /*width: 10%;*/
            margin: 0;
        }

        th {
            /*width: 15%;*/
            padding: 0;
        }

        p {
            font-weight: bold;
            font-size: large;
        }



    </style>

    <script src="js/bootstrap.js"></script>

{% endblock head %}

{% block title %} Edit Users {% endblock title %}

{% block content %}

    {% set classExample = classes|first %}

    {%  set admin = "Admin" %}
    {% set notAdmin = "Regular User" %}

    <div class="clearfix"></div>

    <div class="row">
        {#<div class="col-md-12">#}
        <div class="x_panel2">
            <div class="x_title">
                <h2 style="width: auto; margin-right: 3%;">Gym Users</h2>

                <button class="fa fa-plus add" style="margin-top: 1%; border-radius: 25px;"></button>

                <form style="margin: 0; border-left: 1px solid #5F656A;" role="search" method="get" class="search-form" action="/adminsearchusers">
                    <label style="display: inline-block;">
                        <span class="screen-reader-text">Search for:</span>
                        <input style="margin: 0;" type="search" class="search-field" placeholder="Search â€¦" value="" name="keyword">
                    </label>
                    <input type="submit" class="search-submit" value="Search">
                </form>

                <div class="clearfix"></div>
            </div>
            <div>

                <table class="addClass">
                    <thead>
                    <tr>

                        <th>Name</th>
                        <th>Duration</th>
                        <th>Instructor</th>
                        <th>Start Time</th>
                        <th>Period</th>
                        <th>Capacity</th>
                        <th>Location</th>
                        <th>Days</th>

                    </tr>
                    </thead>
                    <tbody>
                    <form action="/addclass" method="post">
                        <tr>

                            <form action="/addclass" method="post">

                                <td>
                                    <input type="text" style="width: 100%;" name="name" required>
                                </td>

                                <td>
                                    <input type="number" min="1" style="width: 100%;" name="duration" required>
                                </td>

                                <td>

                                    <select name="instructorID" id="" style="width: 100%;" name="instructor" required>

                                        {% for instructor in allInstructors %}
                                            <option value="{{ instructor.id }}">{{ instructor.name }}</option>
                                        {% endfor %}

                                    </select>

                                </td>

                                <td>
                                    <input type="time"style="width: 100%;" name="startTime" required>
                                </td>

                                <td>
                                    <select name="period" id="" style="width: 100%;" name="period" required>
                                        <option value="fall">Fall Semester</option>
                                        <option value="spring">Spring Semester</option>
                                    </select>
                                </td>

                                <td>
                                    <input type="number" min="1" style="width: 100%;" name="capacity" required>
                                </td>

                                <td>
                                    <input type="text" style="width: 100%;" name="location" required>
                                </td>

                                <td>
                                    <select name="days[]" id="" multiple style="width: 120%;"required>



                                        {{ classExample.name }}
                                        {% for key, value in classExample.days %}
                                            <option value="{{ key }}"> {{ key }}</option>
                                        {% endfor %}


                                    </select>


                                </td>

                        </tr>


                        <tr colspan="8">
                            <td>
                                <button type="submit"> Add Class</button>
                            </td>

                    </form>
                    </tr>


                    </tbody>
                </table>


                <!-- start project list -->
                <table class="table table-striped projects">
                    <thead>
                    <tr>

                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Classification</th>
                        <th></th>

                    </tr>
                    </thead>
                    <tbody>



                    {% for user in users %}
                        <tr style="padding: 0;">

                            <td colspan="6" style="border: none; padding: 0;">

                                <div class="x_panel" style="padding: 0;">

                                    <div class="x_title" style="padding: 4px; border-bottom: none;">

                                        {#<h2>Stripped table <small>Stripped table subtitle</small></h2>#}
                                        <div class="split" style="width: 5%">
                                            {#style="width: 5%; margin: 0;"#}
                                            {{ loop.index }}
                                        </div>

                                        <div class="split" style="width: 15%">
                                            {#style="width: 32%; margin: 0;"#}
                                            {#<a>{{ user.name }}</a>#}
                                            {#<br />#}
                                            {#<large>#}
                                            <p>{{ user.name }}</p>

                                        </div>

                                        {#CLASSES REGISTERED#}
                                        {#<div class="split" style="width: 25%; margin: 0;">#}
                                            {#<ul class="list-inline">#}
                                                {#<li>#}
                                                    {#<img src="images/user.png" class="avatar" alt="Avatar">#}
                                                {#</li>#}
                                                {#<li>#}
                                                    {#<img src="images/user.png" class="avatar" alt="Avatar">#}
                                                {#</li>#}
                                                {#<li>#}
                                                    {#<img src="images/user.png" class="avatar" alt="Avatar">#}
                                                {#</li>#}
                                                {#<li>#}
                                                    {#<img src="images/user.png" class="avatar" alt="Avatar">#}
                                                {#</li>#}
                                            {#</ul>#}
                                        {#</div>#}

                                        <div class="split" style="width: 16%">
                                            <p>{{ user.email }}</p>
                                        </div>

                                        <div class="split" style="width: 25%">
                                            <p>{{ user.password }}</p>
                                        </div>

                                        <div class="split" style="width: 15%">
                                            <p>
                                                {% if user.admin == 1 %}
                                                    {{ admin }}

                                                    {% else %}

                                                    {{ notAdmin }}

                                                {% endif %}
                                            </p>
                                        </div>


                                        <ul class="nav navbar-right panel_toolbox">
                                            <li>
                                                <a class="collapse-link"><i class="fa fa-chevron-down"></i></a>
                                            </li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                                    <i class="fa fa-wrench"></i>
                                                </a>
                                                <ul class="dropdown-menu" role="menu">

                                                    {#<form action="/editclass" method="post" style="margin: 0;">#}
                                                    <li>

                                                        <input type="hidden" id="edit" name="edit" value="{{ user.id }}">
                                                        <a href="#" class="edit" value="{{ user.id }}">Edit User</a>

                                                    </li>
                                                    <li>
                                                        <input type="hidden" name="hold" value="{{ class.id }}">
                                                        <a href="#" class="hold" value="{{ class.id }}" >Hold</a>
                                                    </li>

                                                    {#</form>#}
                                                </ul>
                                            </li>
                                            <li>
                                                <a class="close-link delete" value="{{ user.id }}">
                                                    <i class="fa fa-close"></i></a>

                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>

                                    <div class="x_content update" style="padding: 0; display: none;">

                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Password</th>
                                                <th>Age</th>
                                                <th>Gender</th>
                                                <th>Registered Classes</th>
                                                <th>Membership Type</th>
                                                <th>Classification</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr>

                                                <td>
                                                    {{ user.name }}
                                                </td>
                                                <td>{{ user.email }}</td>
                                                <td>{{ user.password }}</td>
                                                <td>{{ user.birthDate }}</td>
                                                <td>{{ user.gender }}</td>
                                                <td>TEMP</td>
                                                <td>
                                                    <ul>
                                                            {% if user.membershipType == 1 %}
                                                                <li>Paid</li>
                                                                {% else %}
                                                                <li>Non-Paid</li>
                                                            {% endif %}
                                                    </ul>
                                                </td>
                                                <td>
                                                    {% if user.admin == 1 %}
                                                        {{ admin }}

                                                    {% else %}

                                                        {{ notAdmin }}

                                                    {% endif %}
                                                </td>
                                                <td></td>
                                            </tr>
                                            <tr style="display: none;" class="updateInfo">
                                                <form action="/updateuser" method="post">

                                                    <td>
                                                        <input style="width: 100%;" type="text" id="name" name="name" value="{{ user.name }}">
                                                    </td>

                                                    <td>
                                                        <input style="width: 100%;" type="email" id="email" name="email" value="{{ user.email }}">
                                                    </td>

                                                    <td>
                                                        <input style="width: 100%;" type="text" id="password" name="password" value="{{ user.password }}">
                                                    </td>

                                                    <td>
                                                        <input style="width: 100%;" type="date" id="birthDate" name="birthDate" value="{{ user.birthDate }}">
                                                    </td>

                                                    <td>
                                                        <select name="gender" id="gender" style="width: 100%;">
                                                        {% if user.gender == "f" %}

                                                        <option value="F" selected>F</option>
                                                            <option value="M">M</option>
                                                        {% else %}
                                                            <option value="F">F</option>
                                                        <option value="M" selected>M</option>
                                                        {% endif %}
                                                        </select>
                                                    </td>

                                                    <td>

                                                        <select name="" id="" multiple>

                                                            {% for class in classes %}

                                                                {#{% for registered in user.registrations %}#}

                                                                    {#{% if registered.id == class.id %}#}

                                                                        {#<option value="{{ class.id }}" selected> {{ class.name }}</option>#}
                                                                    {#{% endif %}#}

                                                                {#{% endfor %}#}

                                                                {% if class in user.registrations %}
                                                                    <option value="{{ class.id }}" selected> {{ class.name }}</option>
                                                                    {% else %}

                                                                        <option value="{{ class.id }}"> {{ class.name }}</option>
                                                                {% endif %}


                                                            {% endfor %}

                                                        </select>
                                                    </td>

                                                    <td>
                                                        <select name="membershipType" id="membershipType" style="width: 100%;">
                                                            {% if user.membershipType == 1 %}
                                                                <option value="1" selected>Paid</option>
                                                                <option value="0">Non-Paid</option>
                                                            {% else %}
                                                                <option value="1">Paid</option>
                                                                <option value="0" selected>Non-Paid</option>
                                                            {% endif %}
                                                        </select>
                                                    </td>

                                                    <td>

                                                        <select name="admin" id="admin" style="width: 100%;">
                                                            {% if user.admin == 1 %}
                                                                <option value="1" selected>{{ admin }}</option>
                                                                <option value="0">{{ notAdmin }}</option>
                                                            {% else %}
                                                                <option value="1">{{ admin }}</option>
                                                                <option value="0" selected>{{ notAdmin }}</option>
                                                            {% endif %}
                                                        </select>

                                                    </td>

                                                    <td>
                                                        <input style="width: 100%;" type="hidden" name="id" value="{{ user.id }}">

                                                        {#remove unnecessary attributes#}
                                                        <button type="submit" value="{{ user.id }}">Update</button>
                                                    </td>


                                                </form>

                                            </tr>
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </td>
                        </tr>


                    {% endfor %}




                    </tbody>
                </table>
                <!-- end project list -->

            </div>
        </div>
    </div>
    </div>



    <script>
        jQuery(document).ready(function() {

            jQuery('.collapse-link').click(function() {
                toggle(this);

            })  ;


            jQuery('.close-link').click(function () {
                var $BOX_PANEL = jQuery(this).closest('.x_panel');
            });






        });
        jQuery('.addClass').toggle();
        jQuery('.add').click(function() {

            jQuery('.addClass').toggle();

        });

        jQuery('.edit').click(function() {

            toggleOnce(this);
            jQuery(this).toggleClass('fa-chevron-down');
            jQuery(this).find('i').toggleClass('fa-chevron-up');
            jQuery('.updateInfo').toggle();

        });

        jQuery('.delete').click(function() {


            if (confirm("Are you sure you want to delete this user?")) {


                jQuery(this).closest('.x_panel').remove();

                jQuery.ajax(
                        {
                            type: 'POST',
                            url: '/deleteuser',
                            data: {
                                id: jQuery(this).attr('value')
                            },
                            success: function (msg) {

                                console.log("SUCCESS AJAX!");

                            }
                        }
                );
            }

        });

        function toggle($this) {

            var $BOX_PANEL = jQuery($this).closest('.x_panel'),
                    $ICON = jQuery($this).find('i'),
                    $BOX_CONTENT = $BOX_PANEL.find('.x_content');

//            console.log($ICON);
            if ($BOX_PANEL.attr('style')) {
                $BOX_CONTENT.slideToggle(200, function(){
                    $BOX_PANEL.removeAttr('style');

                    $ICON.toggleClass('fa-chevron-down');
                    $ICON.addClass('fa-chevron-up');
                });
            } else {
                $BOX_CONTENT.slideToggle(200);
                $BOX_PANEL.css('height', 'auto');
                $ICON.toggleClass('fa-chevron-up');
                $ICON.addClass('fa-chevron-down');
            }

            jQuery('.x_title').css('border-bottom', '2px solid');

        }

        function toggleOnce($this) {

            var $BOX_PANEL = jQuery($this).closest('.x_panel'),
//                    $ICON = jQuery($this).parent().parent().parent().first().find('i'),
                    $ICON = jQuery($this).closest('.collapse-link'),
                    $BOX_CONTENT = $BOX_PANEL.find('.x_content');

            if ($BOX_PANEL.attr('style')) {
                $BOX_CONTENT.slideToggle(200, function(){
                    $BOX_PANEL.removeAttr('style');


                    console.log($ICON);
                    $ICON.toggleClass('fa-chevron-down');
                    console.log($ICON);
                    $ICON.addClass('fa-chevron-up');
                    console.log($ICON);
                });
            }

            $ICON.toggleClass('fa-chevron-down');
            $ICON.toggleClass('fa-chevron-up');

        }

        function toggleUpdate($this) {

            var $B = jQuery($this).closest('.x_content').closest('.x_content');
            console.log($B);

        }


    </script>

    <script>
        jQuery('.edit').click(function() {

            var $id = jQuery(this).attr('value');

            jQuery(this).closest('.x_content').css('display','block');
            jQuery(this).closest('.x_content').css('style','');

        });

    </script>


    <!-- jQuery -->
    {#<script src="js/jquery.min.js"></script>#}
    <!-- Bootstrap -->
    <script src="js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="js/fastclick.js"></script>
    <!-- NProgress -->
    <script src="js/nprogress.js"></script>
    <!-- bootstrap-progressbar -->
    <script>jQuery.noConflict();</script>
    <script src="js/bootstrap-progressbar.js"></script>

    <!-- Custom Theme Scripts -->
    <script>jQuery.noConflict();</script>
    <script src="js/custom.min.js"></script>

{% endblock content %}

