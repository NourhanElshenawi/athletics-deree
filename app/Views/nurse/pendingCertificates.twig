{% extends "master.twig" %}

{% block head %}

    <!-- Bootstrap -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="css/nprogress.css" rel="stylesheet">
    <!-- iCheck -->
    <link href="css/green.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="css/custom.min.css" rel="stylesheet">
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
    </style>

{% endblock head %}

{% block title %} Pending {% endblock title %}

{% block content %}
    <div class="row">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Pending Certificates</h2>

                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <p>Download the file, view it, and approve/reject it.</p>

                    <!-- start project list -->
                    <table class="table table-striped" style="width: 100%;">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Member's Name</th>
                            <th>Type</th>
                            <th>File</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>


                        {% for user in users %}
                            <tr class="user_row">
                                <td>{{ loop.index }}</td>
                                <td> {{ user.name|capitalize }} </td>
                                <td>
                                    {% if user.membershipType == 0 %}
                                        Non-Paid
                                    {% else %}
                                        Paid
                                    {% endif %}

                                </td>
                                <td>
                                    {% if user.certificate_file is not null %}
                                      <a target="_blank" href="/certificates/{{ user.certificate_file }}">{{ user.certificate_file }}</a>
                                    {% else %}
                                        Not uploaded yet
                                    {% endif %}
                                </td>
                                <input type="hidden" class="email" value="{{ user.email }}">
                                <td>
                                    <button value="{{ user.id }}" type="button" class="approve_btn btn btn-success btn-xs" name="{{ user.name|title }}"><i class="fa fa-check" id="{{ user.email }}"></i> Approve</button>
                                    <button value="{{ user.id }}" type="button" class="reject_btn btn btn-danger btn-xs" name="{{ user.name|title }}"><i class="fa fa-close" id="{{ user.email }}"></i> Reject</button>
                                </td>
                            </tr>
                        {% endfor %}


                        </tbody>
                    </table>
                    <!-- end project list -->

                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <!-- Bootstrap -->
    <script src="js/bootstrap.js"></script>
    <!-- FastClick -->
    <script src="js/fastclick.js"></script>
    <!-- NProgress -->
    <script src="js/nprogress.js"></script>
    <!-- bootstrap-progressbar -->
    <script>jQuery.noConflict();</script>
    <script src="js/bootstrap-progressbar.js"></script>

    <!-- Custom Theme Scripts -->
    <script>jQuery.noConflict();</script>
    <script src="js/custom.min.js"></script>

    <script>
        jQuery('.approve_btn').click(function() {

            var approve_btn = this;

            if (confirm("Are you sure you want to approve this certificate?")) {
                console.log("The id is: " + jQuery(this).attr('value'));

                jQuery.ajax({
                    type: 'POST',
                    url: '/approveCertificate',
                    data: {
                        user_certificate_id: jQuery(this).attr('value'),
                        name: jQuery(this).attr('name'),
                        email: jQuery(this).find("i").attr('id'),
                        message: "Your certificate has been approved by the nurse. Enjoy using the " +
                        "DEREE Athletic Facilities."
                    },
                    success: function (data) {
                        data = jQuery.parseJSON(data);
                        console.log(data);

                        if (data['success']==true) {
                            approve_btn.closest('.user_row').remove();
                        } else {
                            jQuery(approve_btn).closest('.user_row').css('opacity', '0.3');
                            alert(data['message']);
                        }
                    }
                });
            }
        });

        jQuery('.reject_btn').click(function() {

            var approve_btn = this;

            if (confirm("Are you sure you want to reject this certificate?")) {
                console.log("The id is: " + jQuery(this).attr('value'));

                jQuery.ajax({
                    type: 'POST',
                    url: '/rejectCertificate',
                    data: {
                        user_certificate_id: jQuery(this).attr('value'),
                        name: jQuery(this).attr('name'),
                        email: jQuery(this).find("i").attr('id'),
                        message: "Your certificate has been rejected by the nurse. Please upload a new one in " +
                        "order to use the DEREE Athletic Facilities."
                    },
                    success: function (data) {
                        data = jQuery.parseJSON(data);

                        if (data['success']==true) {
                            approve_btn.closest('.user_row').remove();
                        } else {
                            jQuery(approve_btn).closest('.user_row').css('opacity', '0.3');
                            alert(data['message']);
                        }
                    }
                });
            }
        });
    </script>


{% endblock content %}



