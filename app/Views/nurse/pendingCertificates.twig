{% extends "master.twig" %}

{% block head %}

    <!-- Bootstrap -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="css/nprogress.css" rel="stylesheet">
    <!-- iCheck -->
    <link href="css/green.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="css/custom.min.css" rel="stylesheet">
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
    </style>

{% endblock head %}

{% block title %} Pending {% endblock title %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Pending Certificates</h2>

                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <p>Download the file, view it, and approve/reject it.</p>

                    <!-- start project list -->
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th style="width: 1%">#</th>
                            <th style="width: 20%">Member's Name</th>
                            <th>Type</th>
                            <th>File</th>
                            <th style="width: 20%">Action</th>
                        </tr>
                        </thead>
                        <tbody>


                        {% for user in users %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td> {{ user.name }} </td>
                                <td>
                                    {% if user.membershipType == 0 %}
                                        Non-Paid
                                    {% else %}
                                        Paid
                                    {% endif %}

                                </td>
                                <td>
                                    {% if user.nurseCertificate is not null %}
                                        {{ user.certificate }}
                                    {% else %}
                                        Not uploaded yet
                                    {% endif %}
                                </td>
                                <td>
                                    <button type="button" class="btn btn-success btn-xs"><i class="fa fa-check"></i> Success</button>
                                    <button type="button" class="btn btn-danger btn-xs"><i class="fa fa-close"></i> Success</button>
                                </td>
                                {# I can change the above td to the one below #}
                                {#<td>#}
                                    {#<ul class="nav navbar-right panel_toolbox">#}
                                        {#<li class="dropdown">#}
                                            {#<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">#}
                                                {#<i class="fa fa-check"></i>#}
                                            {#</a>#}
                                        {#</li>#}
                                        {#<li>#}
                                            {#<a class="close-link delete" value="{{ class.id }}">#}
                                                {#<i class="fa fa-close"></i></a>#}
                                        {#</li>#}
                                    {#</ul>#}
                                {#</td>#}
                            </tr>
                        {% endfor %}


                        </tbody>
                    </table>
                    <!-- end project list -->

                </div>
            </div>
        </div>
    </div>


    <!-- jQuery -->
    <script src="js/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="js/fastclick.js"></script>
    <!-- NProgress -->
    <script src="js/nprogress.js"></script>
    <!-- bootstrap-progressbar -->
    <script>jQuery.noConflict();</script>
    <script src="js/bootstrap-progressbar.js"></script>

    <!-- Custom Theme Scripts -->
    <script>jQuery.noConflict();</script>
    <script src="js/custom.min.js"></script>




{% endblock content %}

{% block info %}
    {{ include('info.twig') }}twig
{% endblock info %}

